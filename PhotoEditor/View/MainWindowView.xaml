<ribbon:RibbonWindow x:Class="PhotoEditor.View.MainWindowView"
        xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhotoEditor"
        mc:Ignorable="d"
        Title="VDeditor" Height="600" Width="1000" WindowStyle ="None" AllowsTransparency ="True" >
    <RibbonWindow.Foreground>
        <SolidColorBrush/>
    </RibbonWindow.Foreground>
    <Window.Background>
        <ImageBrush ImageSource="../Images/148.jpg" Stretch="Fill"/>
    </Window.Background>
    <DockPanel>
        <ribbon:Ribbon  DockPanel.Dock="Top" Background="Transparent" Height="116">
            <Ribbon.ApplicationMenu>
                <RibbonApplicationMenu SmallImageSource="../Images/main.png" Background="Black">
                    <RibbonApplicationMenuItem Name="Open" ImageSource="../Images/open.png" Header="Open" Command="{Binding ClickOpenCommand}"/>
                    <RibbonApplicationMenuItem Name="Save" ImageSource="../Images/save2.png" Header="Save"  Command="{Binding ClickSaveCommand}"/>
                </RibbonApplicationMenu>
            </Ribbon.ApplicationMenu>
            <RibbonTab Name="Main" Header="Tools" BorderBrush="Black" Height="70" VerticalAlignment="Top">
                <RibbonTab.Background>
                    <SolidColorBrush/>
                </RibbonTab.Background>
                <RibbonGroup Name="Group1" Header="Basic" Margin="0,1" Width="173">
                    <RibbonButton Name="B1" LargeImageSource="../Images/rotatel.png" Margin="4,10,-48,-42" VerticalAlignment="Center" HorizontalAlignment="Center" Command="{Binding ClickRotateLeftCommand}" Height="40"/>
                    <RibbonButton Name="B2"   LargeImageSource="../Images/rotater.png" Margin="58,3,-98,-39" VerticalAlignment="Center" HorizontalAlignment="Center" Command="{Binding ClickRotateRightCommand}" Height="40" Width="40"/>
                    <RibbonButton Name="B3"  LargeImageSource="../Images/crop.png" Margin="110,11,-154,-12" VerticalAlignment="Center" HorizontalAlignment="Center" Height="40"/>
                </RibbonGroup>
                <RibbonGroup Name="Group2" Header="Filters" Margin="0,1" Width="448">
                    <RibbonButton Name="B5" Label="Contrast" Margin="0,0,-54,-58" VerticalAlignment="Center" HorizontalAlignment="Center" Command="{Binding ClickTransparencyCommand}"/>
                    <RibbonButton Name="B4" Label="Grayscale" Margin="52,20,-104,-38" VerticalAlignment="Center" HorizontalAlignment="Center" Command="{Binding ClickGrayscaleCommand}"/>
                    <RibbonButton Name="B6" Label="Do smth" Margin="105,20,-157,-38" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <RibbonButton Name="B7" Label="Do smth" Margin="161,20,-213,-38" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <RibbonButton Name="B8" Label="Do smth" Margin="269,20,-321,-38" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <RibbonButton Name="B9" Label="Do smth" Margin="324,20,-376,-38" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <RibbonButton Name="B10" Label="Do smth" Margin="381,20,-433,-38" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <RibbonButton Name="B11" Label="Do smth" Margin="215,20,-267,-38" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                </RibbonGroup>
            </RibbonTab>
        </ribbon:Ribbon>
        <ScrollViewer VerticalScrollBarVisibility="Visible"  HorizontalScrollBarVisibility="Visible" Margin="0">
            <Grid ScrollViewer.CanContentScroll="True" RenderTransformOrigin="0.5,0.5">

                <Image x:Name="image" Source="{Binding OpenedImage.Lb.Source, Mode=TwoWay}" Stretch="None" VerticalAlignment="Top" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.CanContentScroll="True" RenderTransformOrigin="0.5,0.5" AllowDrop="True" OpacityMask="Black" HorizontalAlignment="Left">
                </Image>
                <!-- <TextBlock x:Name="textBlock" Height="25"  Text="{Binding OpenedImage.ImageSource}" Width="137" HorizontalAlignment="Left" VerticalAlignment="Top"/> -->
            </Grid>
        </ScrollViewer>
    </DockPanel>


</ribbon:RibbonWindow>
